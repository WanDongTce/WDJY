/* pages/recorder/recorder.wxss */
.btn{
    width: 100%;
    height: 150rpx;
    border: 2rpx solid red;
}
.current {
    color: rgb(29, 220, 153);
    font-size: 48rpx;
  }
  .text-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .text-content {
    text-align: center;
    font-size: 36rpx;
    margin-top:50rpx;
    width: 90%;
  }
  .text-row {
    margin: 20prx;
    height:60rpx;
    line-height:60rpx;
  }
  .recite {
    width: 50%;
    height: 50rpx;
    background-color: green;
    color: white;
  }
/***************/
.info{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.info-avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    border: 1rpx solid red;
    margin-right: 20rpx;
}
.info-right_title{
    font-size: 32rpx;
    font-weight: 600;
    color: rgb(23, 23, 23);
    margin-bottom: 20rpx;
}
.info-right_author{
    font-size: 24rpx;
    font-weight: 400;
    color: gray;
}

.time-info{
    text-align:right;
    display:block;
}
.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  width: 100%;
}
.footer-btn{
  flex: 1 1 auto;
}