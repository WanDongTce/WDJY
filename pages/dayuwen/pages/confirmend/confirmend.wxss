/* pages/confirmend/confirmend.wxss */
.footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 88rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.btn{
    /* display: inline-flex */
    flex: 1 0 auto;
    border-radius: none;
    text-align: center;
    margin-bottom: 40rpx;
}
.icon{
    width: 44rpx;
    height: 44rpx;
}
/*字幕*/
.text-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .text-content {
    text-align: center;
    font-size: 36rpx;
    margin-top: 50rpx;
    width: 90%;
    height: 600rpx !important;
  }
  .text-row {
    margin: 20prx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
  }
  .progress-wrap{
    background-color: white;
    overflow: hidden;
    border-top: 1rpx solid #eee;   
    text-align: center; 
  }
  .progress{
    padding: 40rpx 0;
  }
  .page{
      background-color: white;
  }