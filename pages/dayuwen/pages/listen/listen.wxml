<!--pages/listen/listen.wxml-->
<!--nav-->
<compontNavbar title="{{tabTitle}}" isShowBack="{{true}}"></compontNavbar>
<view>
	<image class="btn" src="{{thumbnail}}" />
</view>

<view class="text-wrap">
	<scroll-view
	 class="text-content"
	 style="height:500rpx;"
	 scroll-top="{{scrollTop}}"
	 scroll-y
	 scroll-into-view="{{toView}}"
	>
		<view
		 class="text-row"
		 wx:key="*this"
		 id="{{'id'+index}}"
		 wx:for="{{text}}"
		>
			<view class="current" wx:if="{{currentIndex==index}}">
				{{item[1]}}
			</view>
			<view wx:else>
				{{item[1]}}
			</view>
		</view>
	</scroll-view>
</view>

<view class="listen">
	<van-progress
	 pivot-text="{{percentTime}}"
	 color="#0EB90E"
	 percentage="{{percent}}"
	 custom-class="progress"
	/>
</view>
<view class="go-recite">
	<button data-id="{{2}}" class="go-btn" bindtap="goTo">去朗诵</button>
</view>

